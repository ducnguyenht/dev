@model Product
           @{
       ViewContext.Writer.Write("<script>alert(\"asdf\");</script>");       

           }
@using (Html.BeginForm("Index", "Home", FormMethod.Post, new { id = "frmProduct" }))
{
    <table>
        <tr>
            <td>
                ProductID
            </td>
            <td>
                @Html.DevExpress().TextBox(s =>
           {
               s.Name = "ProductID";
               s.ShowModelErrors = true;
               s.ReadOnly = true;
           }).Bind(Model.ProductID).GetHtml()
            </td>
        </tr>
        <tr>
            <td>
                ProductName
            </td>
            <td>
                @Html.DevExpress().TextBox(s =>
           {
               s.Name = "ProductName";
               s.ShowModelErrors = true;
           }).Bind(Model.ProductName).GetHtml()
            </td>
        </tr>
        <tr>
            <td>
                Unit Price
            </td>
            <td>
                @Html.DevExpress().TextBox(s =>
           {
               s.Name = "UnitPrice";
               s.ShowModelErrors = true;
           }).Bind(Model.UnitPrice).GetHtml()
            </td>
        </tr>
        <tr>
            <td>Units On Order</td>
            <td>
                @Html.DevExpress().TextBox(s =>
           {
               s.Name = "UnitsOnOrder";
               s.ShowModelErrors = true;
           }).Bind(Model.UnitsOnOrder).GetHtml()
            </td>
        </tr>
        <tr>
            <td></td>
            <td>
                @Html.DevExpress().HyperLink(s =>
           {
               s.Name = "SaveProduct";
               s.Properties.Text = "Save";
               s.NavigateUrl = "javascript:UpdateGridView();";
           }).GetHtml()
                @Html.DevExpress().HyperLink(s =>
           {
               s.Name = "CancelProduct";
               s.Properties.Text = "Cancel";
               s.NavigateUrl = "javascript:GridView.CancelEdit();"; //GridView= Setting.Name (in gridview)
           }).GetHtml()
                @Html.DevExpress().Button(
                btnSettings =>
                {
                    btnSettings.Name = "btnSave";
                    btnSettings.ControlStyle.CssClass = "button";
                    btnSettings.Text = "Save";
                    btnSettings.ClientSideEvents.Click = "function(s, e) { GridView.UpdateEdit(); }";
                }).GetHtml()
                @Html.DevExpress().Button(
                btnSettings =>
                {
                    btnSettings.Name = "btnCancel";
                    btnSettings.ControlStyle.CssClass = "button";
                    btnSettings.Text = "Cancel";
                    btnSettings.ClientSideEvents.Click = "function(s, e) { GridView.CancelEdit(); }";
                }).GetHtml()
            </td>
        </tr>
    </table>
}
