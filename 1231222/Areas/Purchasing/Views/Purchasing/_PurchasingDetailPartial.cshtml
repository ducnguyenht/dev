    {
        //ViewContext.Writer.Write("Page content 0");     
        Html.RenderAction("DetailPanelPartial");
    });
    settings.TabPages.Add("Định khoản").SetContent(() =>
    {

        Html.RenderAction("PrinciplePanelPartial");

    });
}).GetHtml()