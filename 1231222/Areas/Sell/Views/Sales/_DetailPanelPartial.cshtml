@{
	var grid = Html.DevExpress().GridView(settings => {
        settings.Name = "DetailPanel" + ViewData["ID"];
        settings.SettingsDetail.MasterGridName = "Sales"; ;
        settings.CallbackRouteValues = new { Controller = "Sales", Action = "DetailPanelPartial",ID = ViewData["ID"] };

				settings.SettingsEditing.AddNewRowRouteValues = new { Controller = "Sales", Action = "DetailPanelPartialAddNew" };
        settings.SettingsEditing.UpdateRowRouteValues = new { Controller = "Sales", Action = "DetailPanelPartialUpdate" };
        settings.SettingsEditing.DeleteRowRouteValues = new { Controller = "Sales", Action = "DetailPanelPartialDelete" };
        settings.SettingsEditing.Mode = GridViewEditingMode.EditFormAndDisplayRow;
        settings.SettingsBehavior.ConfirmDelete = true;

		settings.CommandColumn.Visible = true;
        settings.CommandColumn.ShowNewButton = true;
        settings.CommandColumn.ShowDeleteButton = true;
        settings.CommandColumn.ShowEditButton = true;

		settings.KeyFieldName = "ID";

		settings.SettingsPager.Visible = true;
		settings.Settings.ShowGroupPanel = true;
		settings.Settings.ShowFilterRow = true;
		settings.SettingsBehavior.AllowSelectByRowClick = true;

				settings.Columns.Add("Lot");
				settings.Columns.Add("ItemCategory");
				settings.Columns.Add("Specification");
				settings.Columns.Add("QuantitySpecification");
				settings.Columns.Add("UoM");
				settings.Columns.Add("QuantityUoM");
				settings.Columns.Add("Price");
				settings.Columns.Add("SubAmount");
				settings.Columns.Add("VATInPercentage");
				settings.Columns.Add("VATAmount");
				settings.Columns.Add("Amount");
				settings.Columns.Add("Note");
			});
		if (ViewData["EditError"] != null){
        grid.SetEditErrorText((string)ViewData["EditError"]);
    }
}
@grid.Bind(Model).GetHtml()