@model Product
           <script>
               alert("Fac u");
           </script>
@using (Html.BeginForm("Index", "Home", FormMethod.Post, new { id = "frmProduct" }))
{
    <table>
        <tr>
            <td>
                @*@Html.DevExpress().Label(s =>
           {
               s.AssociatedControlName = "ProductID";
               s.Text = "ProductID";
           }).GetHtml()*@
                ProductID
            </td>
            <td>
                @Html.DevExpress().TextBox(s =>
           {
               s.Name = "ProductID";
               s.ShowModelErrors = true;
               s.ReadOnly = true;
           }).Bind(Model.ProductID).GetHtml()
            </td>
        </tr>
        <tr>
            <td>ProductName
                @*@Html.DevExpress().Label(s =>
           {
               s.AssociatedControlName = "ProductName";
               s.Text = "ProductName";
           }).GetHtml()*@
            </td>
            <td>
                @Html.DevExpress().TextBox(s =>
           {
               s.Name = "ProductName";
               s.ShowModelErrors = true;
           }).Bind(Model.ProductName).GetHtml()
            </td>
        </tr>
        <tr>
            <td>Unit Price
                @*@Html.DevExpress().Label(s =>
           {
               s.AssociatedControlName = "UnitPrice";
               s.Text = "Unit Price";
           }).GetHtml()*@
            </td>
            <td>
                @Html.DevExpress().TextBox(s =>
           {
               s.Name = "UnitPrice";
               s.ShowModelErrors = true;
           }).Bind(Model.UnitPrice).GetHtml()
            </td>
        </tr>
        <tr>
            <td>Units On Order
                @*@Html.DevExpress().Label(s =>
           {
               s.AssociatedControlName = "UnitsOnOrder";
               s.Text = "Units On Order";
           }).GetHtml()*@
            </td>
            <td>
                @Html.DevExpress().TextBox(s =>
           {
               s.Name = "UnitsOnOrder";
               s.ShowModelErrors = true;
           }).Bind(Model.UnitsOnOrder).GetHtml()
            </td>
        </tr>
        <tr>
            <td>
                Test Enum
            </td>
            <td>
                @Html.DevExpress().ComboBox(s =>
           {
               s.Name = "TestEnum";
               //Dictionary<int, string> dict = new Dictionary<int, string>();
               //foreach (int item in Enum.GetValues(typeof(TestEnum)))
               //{
               //    dict.Add(item, string.Format("{0} - translated", item));
               //}
               var dict = new Dictionary<int, string>();
               foreach (var name in Enum.GetNames(typeof(TestEnum)))
               {
                   dict.Add((int)Enum.Parse(typeof(TestEnum), name), name);
               }
               s.Properties.DataSource = dict;
               s.Properties.TextField = "Value";
               s.Properties.ValueField = "Key";
               s.Properties.ValueType = typeof(int);
               s.ShowModelErrors = true;
           }).Bind(Model.TestEnum).GetHtml()
            </td>
        </tr>
        <tr>
            <td></td>
            <td>
                @Html.DevExpress().HyperLink(s =>
           {
               s.Name = "SaveProduct";
               s.Properties.Text = "Save";
               s.NavigateUrl = "javascript:UpdateGridView();";
           }).GetHtml()
                @Html.DevExpress().HyperLink(s =>
           {
               s.Name = "CancelProduct";
               s.Properties.Text = "Cancel";
               s.NavigateUrl = "javascript:GridView.CancelEdit();"; //GridView= Setting.Name (in gridview)
           }).GetHtml()
                @*@Html.DevExpress().Button(
                btnSettings => {
                btnSettings.Name = "btnCancel";
                btnSettings.ControlStyle.CssClass = "button";
                btnSettings.Text = "Cancel";
                btnSettings.ClientSideEvents.Click = "function(s, e) { grid.CancelEdit(); }";
                }).GetHtml()*@
            </td>
        </tr>
    </table>
}